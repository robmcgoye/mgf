<div class="card mb-3 shadow-lg rounded border main-display" style="background-color: #f1e5f1">
  <div class="card-body text-dark">
    <h1 class="text-center mt-3"><%= t("session.title") %></h1>
    <div class="container">
      <div class="row justify-content-center">
        <div class="row-10">
          <%= form_with(scope: :session, url: login_path, class: "p-3 mb-3", local: true) do |f| %>
            <div class="input-group mb-3 row">
              <%= f.label :email, t("session.email"), class: "col-2 col-form-label" %>
              <div class="col-10">
                <%= f.email_field :email, class: "form-control shadow rounded", placeholder: t("session.email_placeholder") %>
              </div>
            </div>
            <div class="input-group mb-3 row">
              <%= f.label :password, t("session.password"), class: "col-2 col-form-label" %>
              <div class="col-10">
                <%= f.password_field :password, class: "form-control shadow rounded", placeholder: t("session.password_placeholder") %>
              </div>
            </div>
            <div class="input-group mb-3 justify-content-center">
              <%= f.submit t("session.submit_button"), class: "btn btn-outline-dark btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
