<h3 class="text-light"><%= @page.name.capitalize %></h3>
<%= form_with(model: @page) do |form| %>
  <%= render "shared/error_messages", resource: @page %>

  <div class="field form-group">
  <%= form.label :body %>
    <%= form.text_area :body, class: "tinymce" %>
    <%= tinymce %>
  </div>

  <div class="actions pt-2">
    <%= form.submit class: "btn btn-sm btn-outline-light" %>
  </div>
<% end %>
