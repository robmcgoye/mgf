<div class="container">
  <h3><%= t("contact_form.title") %></h3>

  <%= form_with model: @contact do |form| %>
   <%= render 'shared/error_messages', resource: @contact %>


    <div class="field form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :message %>
      <%= form.text_area :message, size: "70x5", class: "form-control" %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit t("contact_form.submit_button"), class: "btn btn-outline-dark" %>
    </div>
  <% end %>
</div>
